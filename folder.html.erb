<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="robots" content="noindex, nofollow, noarchive, nosnippet">
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="mobile-web-app-capable" content="yes">
  <meta name="viewport" content="minimal-ui, width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=2">
  <%
    if folder.description %>
    <meta name="description" content="<%= folder.description %>">
  <% end
  %>
  <% if folder.name %>
    <title><%= folder.name %></title>
  <% end
  %>
  <link href="<%= folder.path_to_root %>style.css" rel="stylesheet">
  <link href="<%= folder.path_to_root %>fontawesome/css/fontawesome.css" rel="stylesheet" />
  <link href="<%= folder.path_to_root %>fontawesome/css/solid.css" rel="stylesheet" />
</head>

<body>

<div>
<% path_elements = folder.url_path.split('/') %>
<% path_elements.each_with_index do |path_element, index| %>
<% back_path =  '../' * (path_elements.size - index - 1) %>
    <a href="<%= back_path %>"><% if 0 == index %><i class="fa fa-home" aria-hidden="true"></i><% else %><i class="fa fa-caret-right" aria-hidden="true"></i> <%= path_element %><% end %></a>
<% end %>
</div>

<% if folder.is_root? %>
<img src="<%= folder.path_to_root %><%= folder.highlight_image.highlight_image_path %>" title="<%= folder.title %>">
<% end %>
<% if folder.name %>
  <h2><%= folder.name %></h2>
<% end %>
<% if folder.description %>
  <p><%= folder.description %></p>
<% end %>

<% subfolders = folder.subfolders %>
<% unless subfolders.empty? %>
  <h3>Folders</h3>
  <div class="container">
    <ul class="image-gallery">
      <% subfolders.each do |subfolder| %>
        <li>
          <a href="<%= subfolder.url_name %>">
            <img src="<%= subfolder.url_name %>/<%= subfolder.highlight_image.highlight_local_image_path %>" alt="<%= subfolder.name %>" title="<%= subfolder.title %>">
            <div class="overlay"><span title="<%= subfolder.title %>"><%= subfolder.name %></span></div>
          </a>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>

<% albums = folder.albums %>
<% unless albums.empty? %>
  <h3>Albums</h3>
  <div class="container">
    <ul class="image-gallery">
      <% albums.each do |album| %>
        <li>
          <a href="<%= album.url_name %>">
            <img src="<%= album.url_name %>/<%= album.highlight_image.highlight_local_image_path %>" alt="<%= album.name %>" title="<%= album.title %>">
            <div class="overlay"><span title="<%= album.title %>"><%= album.name %></span></div>
          </a>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>

</body>
</html>


